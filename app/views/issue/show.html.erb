<div class="content-block" id="portfolio">
  <div class="container portfolio-sec">
    <header class="block-heading cleafix">
      <div class="title-page">
        <p class="main-header">Scholarship </p>
          <p class="sub-header">奨学金 <%= @issue.title %></p>
      </div>
    </header>

    
  <div align="center">
    <table class="table">
      <tbody>
        <tr>
          <th scope="row" class="issue-row">名前</th>
          <td><%= @issue.title %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">区分</th>
          <td><%= @issue.loan_or_pay %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">募集人数</th>
          <td><%= @issue.number_of_people %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">地域</th>
          <td><%= @issue.region %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">リンク</th>
          <td><%= link_to "公式ページ", @issue.url, :target=>["_blank"] %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">説明</th>
          <td><%= @issue.description %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">利率</th>
          <td><%= @issue.rate %> % </td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">月支払額</th>
          <td><%= @issue.payment %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">応募要件</th>
          <td><%= @issue.requirement %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">併願</th>
          <td><%= @issue.joint_application %></td>
        </tr>
        <tr>
          <th scope="row" class="issue-row">併用</th>
          <td><%= @issue.combined_use %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_issue_path, class: 'btn btn-primary btn-block' %>
  <%= link_to 'Delete', issue_path(@issue), data: { confirm: "本当に削除しますか?" }, method: :delete, class: 'btn btn-danger btn-block' %>
  <% end %>

  <div>
    <p class="main-header">Comment </p>

    <%= form_for(@comment, url: comment_index_path) do  |f| %>
      <%= f.label :writer %>
      <%= f.text_field :writer, class: 'form-control' %>
      <br>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.hidden_field :issue_id, value: @issue.id, class: 'form-control' %>
      <br>
      <%= f.submit 'Send', class: 'btn btn-primary btn-block' %>
    <% end %>

    <% @comments.each do |comment| %>
      <div align="center">
        <table class="table">
          <tbody>
            <tr>
              <th scope="row">コメント者</th>
              <td><%= comment.writer %></td>
            </tr>
            <tr>
              <th scope="row">テキスト</th>
              <td><%= comment.content %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>

</div>