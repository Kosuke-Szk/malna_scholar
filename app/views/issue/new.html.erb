<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>New Issue Set</h3>
    <%= form_for(@issue, url: '/issue', action: :create) do |f|%>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <br>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control' %>
      <br>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      <br>
      <%= f.label :target %>
      <%= f.text_field :target, class: 'form-control' %>
      <br>
      <%= f.label :rate %>
      <%= f.number_field :rate, class: 'form-control' %>
      <br>
      <%= f.label :payment %>
      <%= f.number_field :payment, class: 'form-control' %>
      <br>
      <%= f.submit 'Send', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>