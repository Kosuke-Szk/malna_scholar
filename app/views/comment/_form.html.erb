<div class="modal-dialog">
  <div class="modal-content modal-wrapper">
    <%= form_for(@comment, url: comment_index_path, remote: true) do  |f| %>
      <label>ペンネーム</label>
      <%= f.text_field :writer, class: 'form-control' %>
      <br>
      <label>コメント</label>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.hidden_field :issue_id, value: @issue.id, class: 'form-control' %>
      <br>
      <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>